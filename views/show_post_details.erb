<article>
		<header class="post-header">
		<h2 class="post-title"><%= @post.title %></h2>
		</header>
		<div class="post-content">
		<p class="post-paragraph"><%= @post.text %></p>
		</div>
		<footer class="post-footer">
		<ul><li>by <%= @post.author %> - <%= @post.cat %> - (<%= @post.date %>)</li></ul>
		</footer>
</article>